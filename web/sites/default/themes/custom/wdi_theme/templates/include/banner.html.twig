{% if node.field_media_image is not empty %}
  {% set image_uri = node.field_media_image.entity.field_media_image.entity.fileuri %}
{% endif %}

{# Banner #}
{% if page.header %}
  {% block header %}
    <section class="wrapper-header banner {% if image_uri %}js-background-img{% endif %}">
      {{ page.header }}

      {% if image_uri %}
        <div class="js-bg-parallax"
             style="background: url({{ image_uri|image_style('banner') }}) center center no-repeat; background-size: cover;"></div>
      {% endif %}
    </section>
  {% endblock %}
{% endif %}
